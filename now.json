{
  "version": 2,
  "name": "www.thewdhanat.com",
  "alias": ["www.thewdhanat.com"],
  "scope": "thewdhanat-com",
  "builds": [
    {
      "src": "package.json",
      "use": "@now/static-build",
      "config": { "distDir": "public" }
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    {
      "src": "^/(.*).html",
      "headers": { "cache-control": "public,max-age=0,must-revalidate" }
    },
    {
      "src": "/(.*)",
      "dest": "404.html"
    }
  ]
}
